
#:import Clock kivy.clock.Clock

#:import platform kivy.platform


<MainScreen>:
    name:"Main Screen"
    BoxLayout:

        orientation:"vertical"
        canvas:
            Color:
                #rgba: 0,207,154,1
               # rgba: 0,0,0,1
                rgba: 234,234,174,1

            Rectangle:
                pos: self.pos
                size: self.size




        MDTopAppBar:
            size_hint_x: .9999
            pos_hint: {"center_x": .5, "center_y": .5}
            title: "Bem Vindo"
            color:'black'



        AnchorLayout:
            pos_hint:{"center_x":.5, "center_y":.3}
            size_hint: .43,.3
            pos_hint_y:1


            FitImage:
                id: user_photo
                source:'icon/user.png'


                pos_hint: {"center":1}
                radius:90,90,90,90





        FloatLayout:
            orientation:"horizontal"
            MDFillRoundFlatIconButton:
                icon: "google"
                text: "google"
                theme_text_color: "Custom"
                text_color: "white"
                line_color: "red"
                theme_icon_color: "Custom"
                md_bg_color: "red"
                icon_color: "white"
                on_press:app.change_screen('Buscar Screen')
                pos_hint: {"center_x": .80, "center_y": .1}
                width: "50dp"
                size_hint_x: .38





################################################################################################
            MDFillRoundFlatIconButton:
                id:botao
                icon: "location-enter"
                text: "Entrar"
                theme_text_color: "Custom"
                text_color: "white"
                line_color: 'gray'
                md_bg_color: "black"

                theme_icon_color: "Custom"
                icon_color: "white"
                on_release:root.conect()
                pos_hint: {"center_x": .20, "center_y": .1}
                width: "99dp"
                size_hint_x: .38

            #############################################################

            MDTextField:
                mode: "rectangle"

                hint_text: "Digite seu e-mail cadastrado"
                text_color:"black"
                text_color_normal:"black"
                on_hint_text:"black"
                theme_text_color:"black"
                hint_text_color_focus: "black"
                hint_text_color_normal: "black"
                text_color_focus: "black"
                helper_text_color_normal: "black"



                pos_hint: {"center_x":.5, "center_y":.73}
                size_hint_x: None
                width: "330dp"
                id: text_email
                icon_left: "account"
                icon_left_color_normal:"black"
                icon_left_color_focus:"black"

                icon_color:"black"
                hint_icon_color:"black"
                helper_text: "E-mail"
                helper_text_mode: "persistent"
                helper_text_color_focus: "black"
                line_color_normal: "black"
                line_color_focus: "black"

                max_height: "120dp"

############################################################################################################

            MDTextField:
                mode: "rectangle"
                hint_text: "Digite sua senha"
                hint_text_color_normal: "black"
                hint_icon_color:"black"
                hint_text_color_focus: "black"
                helper_text_color_normal: "black"




                pos_hint: {"center_x":.5, "center_y":.53}
                size_hint_x: None
                width: "330dp"
                id: text_email
                password: True
                id: text_password

                icon_left: "shield-key"
                icon_left_color_normal:"black"
                icon_left_color_focus:"black"

                helper_text: "Senha"
                helper_text_mode: "persistent"
                helper_text_color_focus: "black"
                text_color_normal: "black"
                line_color_normal: "black"
                line_color_focus: "black"
                max_height: "120dp"
                text_color_focus: "black"





#############################################################################################
            MDTextButton:
                text: " Esqueci Senha"
                custom_color: "red"
                pos_hint: {"center_x": .75, "center_y": .35}
                on_release:app.change_screen('Recuperacao Screen')

            MDTextButton:
                text: "Me Cadastrar"
                custom_color: "red"
                pos_hint: {"center_x": .19, "center_y": .35}
                on_release:app.change_screen('Cadastro Screen')

#############################################################################################################################